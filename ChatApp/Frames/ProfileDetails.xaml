<Page x:Class="ChatApp.Frames.ProfileDetails"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ChatApp.Frames"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ProfileDetails">

    <Grid Grid.Column="2" Background="#d2d2d5">
        <StackPanel Margin="20" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Image Source="{Binding ProfilePicture}" Width="100" Height="100" Margin="0,5"/>
            
            <TextBlock Text="{Binding Name}" FontWeight="Bold" FontSize="16" HorizontalAlignment="Center" Margin="0,10,0,0"/>
            
            <TextBlock Text="{Binding Surname}" FontWeight="Bold" FontSize="16" HorizontalAlignment="Center" Margin="0,10,0,0"/>
            
            <TextBlock Text="{Binding BIO}" FontWeight="Bold" FontSize="16" HorizontalAlignment="Center" Margin="0,10,0,0"/>
            
        </StackPanel>
    </Grid>
</Page>
